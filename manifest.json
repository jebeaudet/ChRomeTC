{
	"manifest_version": 3,
	"name": "ChRomeTC",
	"description": "Get the realtime delay before the next RTC bus arrives.",
	"version": "1.3.0",
	"homepage_url": "https://github.com/jebeaudet/ChRomeTC",
    "default_locale" : "en",
    "content_security_policy" : {
		"extension_pages": "connect-src https://wssiteweb.rtcquebec.ca; style-src 'self' 'unsafe-inline'; default-src 'self';"
	},
	"icons": {
		"16": "img/bus_16x16.png",
		"32": "img/bus_32x32.png",
		"48": "img/bus_48x48.png",
		"128": "img/bus_128x128.png"
	},
	"action": {
		"default_icon": "img/bus_512x512.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage"
	]
}
